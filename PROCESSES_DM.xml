    <!-- Learning Data -->
    <learningData>
      <learningPlan>
        <learningObjective>Train technicians to safely perform operational and leak checks of the escape hatch, and interpret results.</learningObjective>
        <learningTask>
          <learningStep>Identify operational risks and required PPE.</learningStep>
          <learningStep>Demonstrate hatch opening/closing procedure.</learningStep>
          <learningStep>Conduct leak detection procedure and result interpretation.</learningStep>
        </learningTask>
      </learningPlan>
      <assessment>
        <assessmentQuestion>
          <question>What indicates a successful hatch sealing test?</question>
          <answer>No bubbles observed after 10 minutes during leak check.</answer>
        </assessmentQuestion>
      </assessment>
    </learningData>

    <!-- Business Rules (BREX) -->
    <brex>
      <businessRules>
        <contextRelatedRule>Only certified Airframe Technicians Level II or higher permitted to perform sealing inspections.</contextRelatedRule>
        <contextIndependentRule>Leak test must only be conducted when external wind conditions are less than 25 knots to avoid false positives.</contextIndependentRule>
      </businessRules>
    </brex>

